{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "$internal/*": [
        "internal/*"
      ]
    },
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src"
  ]
}