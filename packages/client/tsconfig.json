{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "$components/*": [
        "components/*"
      ],
      "$internal/*": [
        "internal/*"
      ],
      "$views/*": [
        "views/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "useDefineForClassFields": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "tsconfig.node.json"
    }
  ]
}
